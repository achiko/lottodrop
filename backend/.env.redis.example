# Redis Configuration

# Redis Connection (Development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Sentinel Configuration (Production)
# Comma-separated list of sentinel addresses
REDIS_SENTINELS=sentinel1:26379,sentinel2:26380,sentinel3:26381
REDIS_MASTER_NAME=lottodrop-master

# Redis Security (Production)
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_TLS_ENABLED=false

# Redis Commander (Optional Web UI)
REDIS_COMMANDER_PASSWORD=admin123

# Rate Limiting Settings
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Session Settings
SESSION_TTL_SECONDS=86400
SESSION_MAX_INACTIVE_MINUTES=30

# Cache Settings
CACHE_ROOM_TTL_SECONDS=300
CACHE_USER_TTL_SECONDS=600
CACHE_LEADERBOARD_TTL_SECONDS=3600
CACHE_GAME_RESULT_TTL_SECONDS=3600

# Memory Management
REDIS_MAX_MEMORY=512mb
REDIS_EVICTION_POLICY=allkeys-lru

# Monitoring
REDIS_SLOW_LOG_THRESHOLD_MS=10
REDIS_MONITOR_ENABLED=false